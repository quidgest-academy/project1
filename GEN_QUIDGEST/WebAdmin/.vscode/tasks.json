{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "powershell",
            "type": "process",
            "args": [
                "-File",
                "build.ps1"
            ],
            "problemMatcher": "$msCompile",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/WebAdmin.sln",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary;ForceNoAlign"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "--project",
                "${workspaceFolder}/WebAdmin.sln"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "vite",
            "type": "npm",
            "script": "vite:run",
            "isBackground": true,
            "path": "./ClientApp",
            "problemMatcher": ["$vite"]
        }
    ]
}